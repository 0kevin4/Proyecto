@model IEnumerable<CRUDInventoryQuick.Models.MARCA>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center" style="color :black; text-shadow: black 0.1em 0.1em 0.2em;">Marcas</h2>
<br />

<p>
    <a id="Crear" asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-bookmark-plus"></i>Agregar Marca</a>
</p>
<table id="Tablas" class="table table-hover table-bordered" style="width:100%">
    <thead class="table-success">
        <tr>
            <th width="30">
                Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MarcaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td align="right" width="110">
                <a id="Editar" asp-action="Edit" asp-route-id="@item.MarcaId"  class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></a> 
                <a id="Detalles" asp-action="Details" asp-route-id="@item.MarcaId"  class="btn btn-sm btn-success"><i class="bi bi-bar-chart"></i></a> 
                <a id="Borrar" asp-action="Delete" asp-route-id="@item.MarcaId" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
