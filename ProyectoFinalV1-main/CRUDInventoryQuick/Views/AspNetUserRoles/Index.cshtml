@model IEnumerable<CRUDInventoryQuick.Models.ASPNETUSERROLES>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color :black">Administrar Roles</h1><br />

<p>

    <a asp-action="Create" class="btn btn-sm btn-info"><i class="bi bi-bookmark-plus"></i>Crear nuevo</a>

</p>
<table id="Tablas" class="table table-hover table-bordered" style="width:100%">
    <thead class="table-primary">
    
        <tr>
            <th width="30">
               Id   
            </th>
            <th>
                Usuario
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ASPNETUSER_ASPNETUSER.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ASPNETROLES_ASPNETROLES.Name)
            </td>

      

            <td align="right" width="110">
                <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></a> 
                <a asp-action="Details" asp-route-id="@item.Id"  class="btn btn-sm btn-success"><i class="bi bi-bar-chart"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
