@model IEnumerable<CRUDInventoryQuick.Models.PRODUCTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center" style="color :black; text-shadow: black 0.1em 0.1em 0.2em;">Productos</h2>
<br />

<p>
    <a asp-action="Create" class="btn btn-sm btn-info" ><i class="bi bi-bookmark-plus"></i>Agregar Producto</a>
</p>
<table id="Tablas" class="table table-hover table-bordered" style="width:100%">
    <thead class="table-primary">
        <tr>
            <th width="30">
               Id 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subcategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stockMaximo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stockMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subcategoria.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stockMaximo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stockMinimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td align="right" width="110">
                <a asp-action="Edit" asp-route-id="@item.ProductoId"  class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></a> 
                <a asp-action="Details" asp-route-id="@item.ProductoId"  class="btn btn-sm btn-success"><i class="bi bi-bar-chart"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
            </td>

                <form asp-action="AgregarCantidad" asp-route-id="@item.ProductoId" method="post">
                    <b><label for="cantidadA">Agregar cantidad:</label></b>&nbsp;
                    <input type="number" name="cantidadA" id="cantidadA" value="" />&nbsp;
                    <input type="submit" value="Agregar" />
                    @Html.AntiForgeryToken()
                </form>
                @if (TempData["ErrorAñadir"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorAñadir"]</div>
                }
                <p></p>
                <form asp-action="EliminarCantidad" asp-route-id="@item.ProductoId" method="post">
                    <b><label for="cantidadE">Eliminar cantidad:</label></b>&nbsp;
                    <input type="number" name="cantidadE" id="cantidadE" value="" />&nbsp;
                    <input type="submit" value="Eliminar" />&nbsp;<p></p>
                    @Html.AntiForgeryToken()
                </form>
                @if (TempData["ErrorEliminar"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorEliminar"]</div>
                }
                
        </tr>
}
    </tbody>
</table>
