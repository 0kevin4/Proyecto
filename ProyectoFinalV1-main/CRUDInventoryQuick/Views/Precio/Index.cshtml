@model IEnumerable<CRUDInventoryQuick.Models.PRECIO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center" style="color :black; text-shadow: black 0.1em 0.1em 0.2em;">Precios</h2>
<br />

<p>
    <a id="Crear" asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-bookmark-plus"></i>Agregar Precio</a>
</p>
<table id="Tablas" class="table table-hover table-bordered" style="width:100%">
    <thead class="table-success">

        <tr>
            <th width="30">
                Id
            </th>
            <th>
                Fecha Ingreso
            </th>
            <th width="110">
                Precio Compra
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento)
            </th>
            <th width="110">
                Precio Inicial
            </th>
            <th width="110">
               Precio Final
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th width="100"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVentaInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVentaFinal)
            </td>
            <td>
                    @if (item.Producto == null)
                    {
                        <text>Sin Producto</text>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    }
            </td>
            <td align="right" width="110">
                <a id="Editar"  asp-action="Edit" asp-route-id="@item.PrecioId" class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></a>
                <a id="Detalles"  asp-action="Details" asp-route-id="@item.PrecioId" class="btn btn-sm btn-success"><i class="bi bi-bar-chart"></i></a>
                <a id="Borrar" asp-action="Delete" asp-route-id="@item.PrecioId"  class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
