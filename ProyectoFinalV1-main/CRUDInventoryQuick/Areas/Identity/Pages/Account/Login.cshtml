@page
@model LoginModel

@{

    ViewData["Title"] = "Acceder" ;
}

<h1>@ViewData["Title"]</h1><br>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Correo*" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña*"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div><br />
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div><br />
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>
                </div><br />
                <div class="form-group" align="center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-sm btn-success">Perdio su contraseña!!</a>
                        
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-sm btn-success">Registrarse como Nuevo</a>
                    </p>
@*                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn btn-sm btn-success">Reenviar correo de confirmacion</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
