@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmacion de registro";
}

<h1>@ViewData["Title"]</h1><br>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-sm btn-success">Click aqui para confirmar su cuenta</a>
</p>
    }
    else
    {
<p>

            Por favor revise su correo electrónico para confirmar su cuenta.
</p>
    }
}

